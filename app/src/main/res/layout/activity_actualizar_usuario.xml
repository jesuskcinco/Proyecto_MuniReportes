<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarUsuario"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imgusuario"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:maxHeight="150dp"
        android:adjustViewBounds="false"
        android:background="#2196F3"
        android:cropToPadding="false"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:onClick="onClick5"/>

    <EditText
        android:id="@+id/txt_dni3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DNI"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/txt_nombres3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombres"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/txt_apellidos3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Apellidos"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/txt_usuario3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        />


    <EditText
        android:id="@+id/txt_clave3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Celular" />

    <EditText
        android:id="@+id/txt_cel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Celular"
        android:inputType="number"
        android:maxLength="9"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo" />

    <EditText
        android:id="@+id/txt_correo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress" />
    <Button
        android:id="@+id/btn_grabar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick5"
        android:text="Actualizar Datos"
        />
    <Button
        android:id="@+id/btn_canc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick5"
        android:text="Cancelar"
        />

</LinearLayout>