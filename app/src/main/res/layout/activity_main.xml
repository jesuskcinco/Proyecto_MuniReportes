<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/contenidoprincipal">
    <Button
        android:id="@+id/btnsalirfinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:onClick="onClick"/>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Registrarse Botons" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Buscar Botons" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Eliminar Usuario" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Actualizar Usuario" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Registrar Mototaxi" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Registrar Tipo de Incidente" />

            <EditText
                android:id="@+id/dnipasado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <EditText
                android:id="@+id/clavepasada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Nivel Incidente"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/button15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reporte de Incidentes"
                android:onClick="onClick"/>
            <Button
                android:id="@+id/button16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panel de Incidentes"
                android:onClick="onClick"/>
            <Button
            android:id="@+id/btnmotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Mototaxis"
            android:onClick="onClick"/>
            <Button
                android:id="@+id/btnregistroconducmoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asignarme una Moto"
                android:onClick="onClick"/>
            <Button
                android:id="@+id/btnregsociedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Sociedad"
                android:onClick="onClick"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>