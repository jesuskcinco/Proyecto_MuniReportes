<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".ActualizarMototaxi">

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Actualizar" />

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Regresar" />

    <EditText
        android:id="@+id/edtcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Color"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageve"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="#FF5722"
        android:maxHeight="93dp"
        android:onClick="onClick"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/edtmodel"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Modelo" />

    <TextView
        android:id="@+id/edtplacave"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="Placa" />

    <TextView
        android:id="@+id/edttipove"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="Tipo Vehiculo" />

    <TextView
        android:id="@+id/edtusu"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="Dni_duenio" />
</LinearLayout>